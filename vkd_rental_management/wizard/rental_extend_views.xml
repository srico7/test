<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_rental_extend_wizard_form" model="ir.ui.view">
        <field name="name">rental.extend.wizard.form</field>
        <field name="model">rental.extend.wizard</field>
        <field name="arch" type="xml">
            <form string="Extend Rental Period">
                <group>
                    <field name="new_start_date"/>
                    <field name="new_return_date"/>
                    <field name="reason"/>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="action_confirm_extension" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>